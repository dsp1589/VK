<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_hieght"
                android:background="@color/color_gray"
                android:weightSum="3"
                >

                <TextView
                    android:id="@+id/mostsellproTxt"
                    android:layout_width="match_parent"
                    android:text="Most Selling\nProduct"
                    android:textColor="@color/color_black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/top_font_size"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/newarrivedTxt"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:text="New Arrived\nProduct"
                    android:textColor="@color/color_black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="@dimen/top_font_size"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/sellbrandTxt"
                    android:layout_width="match_parent"
                    android:text="Most Selling\nBrand"
                    android:textColor="@color/color_black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/top_font_size"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingRight="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5">
                <LinearLayout
                    android:id="@+id/topLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >


                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_hieght"
                android:background="@color/color_gray"
                android:padding="@dimen/margin_5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Boys"
                    android:textColor="@color/color_black"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:textAlignment="inherit"
                    android:textSize="@dimen/font_size"
                    android:layout_height="match_parent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="View More"
                    android:textColor="#FDAD00"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/font_size"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5"
                android:scrollbars="none"

                >
                <LinearLayout
                    android:id="@+id/boysLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >


                </LinearLayout>

            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_hieght"
                android:background="@color/color_gray"
                android:padding="@dimen/margin_5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Girls"
                    android:textColor="@color/color_black"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:textAlignment="inherit"
                    android:textSize="@dimen/font_size"
                    android:layout_height="match_parent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="View More"
                    android:textColor="#FDAD00"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/font_size"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingRight="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5"
                >
                <LinearLayout
                    android:id="@+id/girlsLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                </LinearLayout>

            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_hieght"
                android:background="@color/color_gray"
                android:padding="@dimen/margin_5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Man"
                    android:textColor="@color/color_black"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:textAlignment="inherit"
                    android:textSize="@dimen/font_size"
                    android:layout_height="match_parent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="View More"
                    android:textColor="#FDAD00"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/font_size"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingRight="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5"
                >
                <LinearLayout
                    android:id="@+id/menLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                </LinearLayout>

            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/topbar_hieght"
                android:background="@color/color_gray"
                android:padding="@dimen/margin_5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Women"
                    android:textColor="@color/color_black"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    android:textAlignment="inherit"
                    android:textSize="@dimen/font_size"
                    android:layout_height="match_parent"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="View More"
                    android:textColor="#FDAD00"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/font_size"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingRight="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5"
                >
                <LinearLayout
                    android:id="@+id/womenLyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
