<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.ForgotPasswordActivity"
    android:background="@color/gray_very_light_color"
    style="android:windowContentOverlay"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/LLLogoSection"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_light_color"

                        android:layout_marginTop="10dp"
                        >

                    </View>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLLoginSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/LLLogoSection"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMAIL:"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black_color"
                        />
                    <EditText
                        android:id="@+id/loginEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter your email here"
                        android:layout_marginBottom="10dp"
                        android:padding="5dp"
                        android:background="@drawable/edittextstyle"

                        android:inputType="textEmailAddress"
                        />



                    <Button
                        android:id="@+id/bSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:background="@color/black_color"
                        android:textColor="@color/white_color"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/login_error"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="@color/red_color"
                        android:textStyle="bold"

                        />

                </LinearLayout>



            </RelativeLayout>
        </LinearLayout>



    </ScrollView>



</RelativeLayout>
